{
  "name": "led-controller-desktop",
  "version": "1.0.0",
  "description": "Led Controller for Desktop",
  "author": "Sergi √Åvila",
  "homepage": "./",
  "main": "./build/electron.js",
  "scripts": {
    "start": "npm run react",
    "build": "npm run react:build && npm run electron:build && npm run electron:dist",
    "postinstall": "electron-builder install-app-deps",
    "react": "react-scripts start",
    "react:build": "react-scripts build",
    "electron:build": "tsc -p electron",
    "electron:dev": "npm run electron:build && electron .",
    "electron:dist": "electron-builder"
  },
  "dependencies": {
    "@jaames/iro": "^5.2.3",
    "electron-is-dev": "^1.2.0",
    "magic-home": "^2.6.1",
    "node-yeelight": "^1.0.6",
    "node-yeelight-wifi": "^0.1.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "yeelight-platform": "^1.0.9"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.51",
    "electron-builder": "^22.8.1",
    "node-sass": "^4.14.1",
    "react-scripts": "3.4.3",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "last 3 chrome version"
  ],
  "build": {
    "appId": "com.led-strip-controller.app",
    "productName": "LED Controller",
    "win": {
      "target": "portable",
      "icon": "build/icon-256x256.png"
    }
  }
}
