{
  "name": "led-controller-desktop",
  "version": "1.0.0",
  "description": "Led Controller for Desktop",
  "author": "Sergi √Åvila",
  "homepage": "./",
  "main": "build/electron/electron.js",
  "scripts": {
    "start": "npm run react",
    "build": "npm run react:build && npm run electron:build && npm run electron:dist",
    "postinstall": "electron-builder install-app-deps",
    "react": "react-scripts start",
    "react:build": "react-scripts build",
    "electron:build": "tsc -p electron",
    "electron:dev": "npm run electron:build && electron .",
    "electron:dist": "electron-builder"
  },
  "dependencies": {
    "@jaames/iro": "^5.1.8",
    "electron": "^9.0.0",
    "electron-is-dev": "^1.2.0",
    "magic-home": "^2.4.1",
    "node-yeelight-wifi": "^0.1.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/react": "^16.9.35",
    "cross-env": "^7.0.2",
    "electron-builder": "^22.7.0",
    "node-sass": "^4.14.1",
    "react-scripts": "3.4.1",
    "typescript": "^3.9.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "last 3 chrome version"
  ],
  "build": {
    "appId": "com.led-strip-controller.app",
    "productName": "LED Controller",
    "win": {
      "target": "portable",
      "icon": "build/icon-256x256.png"
    }
  }
}
